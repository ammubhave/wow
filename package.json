{
  "name": "wow",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "prepare": "husky",
    "postinstall": "zenstack generate",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:push:remote": "prisma migrate diff --from-url file:./dev.sqlite --to-schema-datamodel prisma/schema.prisma --script | turso db shell wow-dev",
    "db:push:remote:prod": "prisma migrate diff --from-url file:./dev.sqlite --to-schema-datamodel prisma/schema.prisma --script | turso db shell wow",
    "db:push:local": "prisma db push"
  },
  "workspaces": [
    "do",
    "web"
  ],
  "dependencies": {
    "@prisma/client": "5.19.1",
    "@zenstackhq/runtime": "2.5.1",
    "turbo": "^2.1.1"
  },
  "packageManager": "bun@1.1.26",
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "prisma": "^5.19.1",
    "zenstack": "2.5.1"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "trustedDependencies": [
    "@prisma/client",
    "@prisma/engines",
    "prisma",
    "zenstack"
  ]
}
